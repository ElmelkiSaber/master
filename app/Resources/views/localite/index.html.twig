{% extends "widget-admin.html.twig" %}
{% block body %}
            <a class="btn btn-primary btn-fw" href="{{ path('localite_new') }}">Create a new localite</a>

        <div class="row">
            <div class="col-lg-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">localite</h4>
                  <div class="table-responsive">
                    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Parentid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for localite in localites %}
            <tr>
                <td><a href="{{ path('localite_show', { 'id': localite.id }) }}">{{ localite.id }}</a></td>
                <td>{{ localite.libelle }}</td>
                <td>{{ localite.parentId }}</td>
                <td>
                            <a href="{{ path('localite_show', { 'id': localite.id }) }}">show</a>
</td><td>
                            <a href="{{ path('localite_edit', { 'id': localite.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
</div>
</div>
</div>
{% endblock %}
